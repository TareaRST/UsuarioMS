generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  GUEST
}


model User {
  id        Int @id @default(autoincrement())
  nombre    String
  apellido  String
  email     String @unique
  password  String
  role      Role @default(GUEST)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  available Boolean @default(true)
}